# Server Configuration
NODE_ENV=development
PORT=3001

# Database
# For local development with PostgreSQL:
# DATABASE_URL=postgresql://user:password@localhost:5432/flightsearch
# For local development with SQLite (fallback):
DATABASE_URL=file:./prisma/flight-search.db

# Amadeus API Credentials
# Sign up at: https://developers.amadeus.com
AMADEUS_API_KEY=your_api_key_here
AMADEUS_API_SECRET=your_api_secret_here

# Amadeus API Base URL
# Test environment: https://test.api.amadeus.com
# Production environment: https://api.amadeus.com
AMADEUS_BASE_URL=https://test.api.amadeus.com

# Frontend URL for CORS
FRONTEND_URL=http://localhost:5173

# Cache Configuration (optional, defaults used if not set)
# CACHE_TTL=900  # Cache TTL in seconds (15 minutes)

# Rate Limiting (optional, defaults used if not set)
# RATE_LIMIT_WINDOW=900000  # Window in milliseconds (15 minutes)
# RATE_LIMIT_MAX=100  # Max requests per window
